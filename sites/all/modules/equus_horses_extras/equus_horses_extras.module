/**
 * Calculates the age of a horse in game days based on information about the aging
 * speed at various time periods in its life.
 *
 * @param Array $aging_details Array of time period objects to consider. Each time period
 *                           should have properties start (string:Y-m-d H:i:s),
 *                           end (string:Y-m-d H:i:s), and speed (Integer).
 * @param string $today The day to calculate the age against, defaults to today
 * @return int Number of game days old the horse is
 */
function equus_horses_extras_calc_age($aging_details, $today = NULL) {
    if (empty($aging_details)) {
        return NULL;
    }

    if ($today == NULL) {
        $today = new DateTime('now');
    } else {
        $today = new DateTime($today);
    }

    $game_days_old = 0;
    foreach($aging_details as $time_period) {
        if ($time_period->end == NULL) {
            $end = $today;
        } else {
            $end = min($today, new DateTime($time_period->end));
        }

        $time_period_length = $end->diff(new DateTime($time_period->start))->days+1;

        $game_days_old += $time_period_length * $time_period->speed;

        if ($end == $today) {
            break;
        }
    }

    return $game_days_old;
}

/**
 * Determines, given the aging details, whether the horse is a foal or an adult.
 *
 * @param Array $aging_details Array of time period objects to consider. Each time period
 *                           should have properties start (string:Y-m-d H:i:s),
 *                           end (string:Y-m-d H:i:s), and speed (Integer).
 * @param string $today The day to calculate the age against, defaults to today
 * @return bool True if the horse is currently a foal, false if horse is currently an adult
 */
function equus_horses_extras_check_is_foal($aging_details, $today = NULL) {
    $time_period = equus_horses_extras_get_time_period($aging_details, $today);
    return $time_period->lifestage == 'foal';
}

function equus_horses_extras_get_time_period($aging_details, $today = NULL) {
    if (empty($aging_details)) {
        return NULL;
    }

    if ($today == NULL) {
        $today = new DateTime('now');
    } else {
        $today = new DateTime($today);
    }

    foreach ($aging_details as $time_period) {
        $start = new DateTime($time_period->start);
        if ($time_period->end != NULL) {
            $end = new DateTime($time_period->end);
        } else {
            $end = NULL;
        }

        if ($today > $start && ($end == NULL || $today < $end)) {
            return $time_period;
        }
    }
}

function equus_horses_extras_calc_current_stat_target($age) {
    if ($age >= 0 && $age < 5) {
        return round(2 * ($age * $age));
    } else if ($age >= 5 && $age < 10) {
        return round(100 - 2 * (pow(10 - $age, 2)));
    } else {
        return 100;
    }
}

