function equus_horses_extras_node_validate($node, $form, &$form_state) {
	if ($node->type != 'horse') {
		return;
	}

	//form_set_value($element, $element['#date_items'], $form_state);

	$breedID = $node->field_horse_breed['und'][0]['target_id'];
	$breed = node_load($breedID);

	$body_typeID = $node->field_horse_body_type['und'][0]['target_id'];
	$body_type = node_load($body_typeID);


	// Verify that user has enough horse credits to activate the horse
	// TODO: Make this section its own function
	// check if new horse
	if (!isset($node->nid)) {
		// if new check whether active is set
		if ($node->field_horse_activation_status['und'][0]['value'] == 'Active') {
			// if yes check for points
			equus_horses_extras_validate_regular_hc_count($form['uid']['#value']);
		} 
	} else {
		// get activation status
		$original_value = $form['#node']->field_horse_activation_status['und'][0]['value'];
		$new_value = $node->field_horse_activation_status['und'][0]['value'];

		// if not new check whether previous value is pending and new value is active
		if ($original_value == 'Pending' && $new_value == 'Active') {
			// if yes check for points
			equus_horses_extras_validate_regular_hc_count($form['uid']['#value']);
		}
	}

	// Verify that residence/property is owned by the currently logged in user
	equus_horses_extras_validate_residence_ownshp($form['uid']['#value'], $node->field_horse_residence['und'][0]['target_id']);

	// Verify that existing horse hasn't had its creating org changed
/*	if ($node->nid != NULL) {
		$original_creating_org = $form['#node']->field_horse_creating_org['und'][0]['target_id'];
		$new_creating_org = $node->field_horse_creating_org['und'][0]['target_id'];
		// If the horse is being edited, disable the creating org field. Creating org should only be accessible on first creation.
		if ($original_creating_org != $new_creating_org) {
			form_set_error('field_horse_creating_org', "Database consistency error. Please contact the site administrator.");
			watchdog('field_horse_creating_org', 'Attempted to change creating org after horse was already created. uid = @uid', array('@uid'=>$node->uid), WATCHDOG_ERROR);
		}
	}*/
	// TODO: Test whether the field permissions module handles this for me already: 
	// Are there any fields that are critical to gameplay and would be game breaking if people were able to freely edit?
	// Stats
	// Gender
	// Age
	// Pedigree
	// Show Cooldown
	// TODO: Ask Peter about doing this in a loop

	if (!isset($form['aging_system_unlock']) || $form['aging_system_unlock']['#value'] == 1) {
		$transition_year = $form['transition_year']['#value'];
		if (!is_numeric($transition_year) || $transition_year < 0 || $transition_year != floor($transition_year)) {
			form_set_error('transition_year', "$transition_year is not a valid year.");
		}
		// TODO: Test this
		if (isset($node->nid) && $transition_year <= $node->field_horse_age[LANGUAGE_NONE][0]['value']) {
			form_set_error('transition_year', "This transition year has already passed. Choose a transition year that is greater than the horse's current age.");
		}
	}
    //TODO: If already an adult, can't change foal stuff (unless still pending)
}

function equus_horses_extras_node_submit($node, $form, &$form_state) {
    if ($node->type != 'horse') {
        return;
    }
    // TODO: Hide all aging fields behind a checkbox that would allow you to edit them.
    // TODO: Use the status of the checkbox to determine whether to run the next 100 lines of code
    if ($node->field_horse_activation_status[LANGUAGE_NONE][0]['value'] == 'Active') {
        $is_active = true;
    } else {
    	$is_active = false;
    }
    if (!isset($form['aging_system_unlock']) || $form['aging_system_unlock']['#value'] == 1) {
	    $now_raw = new DateTime('now');
	    $now = $now_raw->format('Y-m-d H:i:s');
	    // TODO: equals null OR is pending
	    if ($node->nid == NULL) {
	        $dob = $node->field_horse_date_of_birth[LANGUAGE_NONE][0]['value'];
	        $dob_date = new DateTime($dob);

	        if ($form['foal_speed']['#value'] == 0) {
	            $foal_end_date_str = NULL;
	        } else {
	            $foal_days = round(($form['transition_year']['#value']*365)/$form['foal_speed']['#value']);
	            $foal_end_date = $dob_date->add(new DateInterval("P{$foal_days}D"));
	            $foal_end_date_str = $foal_end_date->format('Y-m-d H:i:s');
	        }

	        $aging_details = array();
	        $aging_details[] = array('start' => $dob, 'end' => $foal_end_date_str, 'speed' => $form['foal_speed']['#value'], 'lifestage' => 'foal', 'set_date' => $now, 'transition_year' => $form['transition_year']['#value']);

	        // Add adult period if there is one
	        if ($foal_end_date_str != NULL) {
	            $adult_start_date = $foal_end_date->add(new DateInterval("P1D"));
	            $adult_start_date_str = $adult_start_date->format('Y-m-d H:i:s');
	            $aging_details[] = array('start' => $adult_start_date_str, 'end' => NULL, 'speed' => $form['adult_speed']['#value'], 'lifestage' => 'adult', 'set_date' => $now);
	        }
	        $node->field_horse_aging_details[LANGUAGE_NONE][0]['value'] = json_encode($aging_details);
	    } else {

	        $aging_details = json_decode($node->field_horse_aging_details[LANGUAGE_NONE][0]['value']);
	        $current_time_period = 0;
	        $game_days_old = 0;
	        while ($aging_details[$current_time_period]->end !== NULL && $aging_details[$current_time_period]->end < $now) {
	            $current_time_period++;
	            // add this time period to the horse lifetime counter
	            $end = new DateTime($aging_details[$current_time_period]->end);
	            $time_period_length = $end->diff(new DateTime($aging_details[$current_time_period]->start))->days+1;
	            $game_days_old += $time_period_length * $aging_details[$current_time_period]->speed;
	        }
	        // at this point, game_days_old only includes completed time periods

	        $current_details = $aging_details[$current_time_period];
	        // if still a foal
	        if ($current_details->lifestage == 'foal') {
	            // delete all entries that start in the future
	            $new_aging_details = array_slice($aging_details, 0, $current_time_period + 1);

	            // mark the end period of the last entry after all future entries have ben deleted with today's date
	            $new_aging_details[$current_time_period]->end = $now;

	            // adds however many days the horse lived in the period that was just closed
	            $end = new DateTime($new_aging_details[$current_time_period]->end);
	            $time_period_length = $end->diff(new DateTime($new_aging_details[$current_time_period]->start))->days+1;
	            $game_days_old += $time_period_length * $new_aging_details[$current_time_period]->speed;

	            // if foal speed > 0 create a new entry, starting today, ending at the new transition year end date
	            if ($form['foal_speed']['#value'] > 0) {
	                $dob = $new_aging_details[0]->start;
	                $dob_date = new DateTime($dob);
	                // given the new information (new speed or new transition year), what real date will the transition happen on?
	                $foal_game_days_remaining = ($form['transition_year']['#value']*365) - $game_days_old;
	                if ($foal_game_days_remaining < 0) {
	                    watchdog('equus_horses_extras', "Attempted to set transition year before current time.", NULL, WATCHDOG_WARNING);
	                    drupal_goto('/');
	                }

	                $foal_days_remaining = round(($foal_game_days_remaining/$form['foal_speed']['#value']));
	                $foal_end_date = $now_raw->add(new DateInterval("P{$foal_days_remaining}D"));
	                $foal_end_date_str = $foal_end_date->format('Y-m-d H:i:s');

	                $new_aging_details[] = array('start' => $now, 'end' => $foal_end_date_str, 'speed' => $form['foal_speed']['#value'], 'lifestage' => 'foal', 'set_date' => $now);

	                // add a new adult phase starting at the transition year end date
	                $adult_start_date = $foal_end_date->add(new DateInterval("P1D"));
	                $adult_start_date_str = $adult_start_date->format('Y-m-d H:i:s');
	                $new_aging_details[] = array('start' => $adult_start_date_str, 'end' => NULL, 'speed' => $form['adult_speed']['#value'], 'lifestage' => 'adult', 'set_date' => $now);
	            } else {
	                // if foal speed == 0 create a new entry starting today with an indefinite end period and a speed of 0
	                $new_aging_details[] = array('start' => $now, 'end' => NULL, 'speed' => $form['foal_speed']['#value'], 'lifestage' => 'foal', 'set_date' => $now);
	                // and do not create an additional adult phase
	            }
	        } else {
	            // if an adult
	            // mark the most recent period's end date with today's date
	            $new_aging_details = $aging_details;
	            $new_aging_details[$current_time_period]->end = $now;

	            // start a new period with today's date as the starting point and the aging rate being the adult aging rate
	            $new_aging_details[] = array('start' => $now, 'end' => NULL, 'speed' => $form['adult_speed']['#value'], 'lifestage' => 'adult', 'set_date' => $now);
	        }

	        $node->field_horse_aging_details[LANGUAGE_NONE][0]['value'] = json_encode($new_aging_details);
		}

    }
}

function equus_horses_extras_node_presave($node) {
	if ($node->type != 'horse') {
		return;
	}
	if ($node->nid == NULL || $node->original->title != $node->title) {
		$orgID = $node->field_horse_creating_org['und'][0]['target_id'];
		$org = node_load($orgID);
		$real_name = equus_organizations_calc_real_name($node->title, $org);
		$node->field_horse_real_name['und'][0]['value'] = $real_name;
	}

    // assign stats to horse if activation status changes from pending to active
    if (isset($node->original->field_horse_activation_status['und'][0]['value'])) {
        $original_value = $node->original->field_horse_activation_status['und'][0]['value'];
    } else {
        $original_value = false;
    }
    $new_value = $node->field_horse_activation_status['und'][0]['value'];

    // if not new check whether previous value is pending and new value is active
    if ((!$original_value || $original_value == 'Pending') && $new_value == 'Active') {
        // spend a horse credit to activate the horse
        $status = equus_horses_extras_spend_regular_hc($node->uid);

        // if we failed to spend a horse credit
        if ($status === false) {
            // reset activation status
            $node->field_horse_activation_status['und'][0]['value'] = 'Pending';
            watchdog('equus_horses_extras', 'Attempted to spend HC but didn\'t have enough. uid = @uid', array('@uid'=>$node->uid), WATCHDOG_ERROR);
            drupal_set_message("Not enough horse credits to activate a horse. Activating a horse costs one horse credit. You can buy one in the store!", 'error');
        } else {
            // assign stats
            $node->field_horse_stats[LANGUAGE_NONE][0]['value'] = equus_horses_extras_calc_stats($node);
        }
    }
}

