/**
 * Displays an error message if the user has not created 
 * an organization and/or a property when attempting to create a horse.
 *
 * Displays the number of each type of horse credits the user has. 
 *
 * Displays only those properties associated with an organization
 * that the currently logged in user is a member of in the horse 
 * residence field.
 *
 * Implements hook_form_alter for the horse creation form.
 */
function equus_horses_extras_form_horse_node_form_alter(&$form, $form_state) {
	$uid = $GLOBALS['user']->uid;
	// get all organizations (and properties) associated with the currently logged in user
	$properties = equus_properties_get_user_assoc_properties_by_org($uid);

	// if the user has no organizations, print an error
	if (empty($properties)) {
		drupal_set_message('You need to create an organization and a property before you can create a horse.','error');
	} else {
		$empty = TRUE;

		// if the user has no properties, print an error
		foreach ($properties as $property_list) {
			if (!empty($property_list)) {
				$empty = FALSE;
				break;
			}
		}

		if ($empty) {
			drupal_set_message('You need to create a property before you can create a horse.','error');
		}
	}
	
	// pass the correct property options to the form for the horse residence field
	$form['field_horse_residence']['und']['#options'] = $properties;

    // pass the correct organization options to the form for the creating organization field
    $organizations = equus_organizations_get_org_options($uid);
    $form['field_horse_creating_org']['und']['#options'] = $organizations;

	$current_regular_HC = userpoints_get_current_points($uid, EQUUS_HORSES_EXTRAS_REGULAR_HC_TID);

	$message = "";
	if ($current_regular_HC == 0) {
		$message .= "You have 0 Regular Horse Credits ";
	} else if ($current_regular_HC == 1) {
		$message .= "You have 1 Regular Horse Credit ";
	} else if ($current_regular_HC > 1) {
		$message .= "You have $current_regular_HC Regular Horse Credits ";
	}
	drupal_set_message($message);

    $is_new = $form['nid']['#value'] === NULL;
    $is_active = false;
    $is_foal = true;

    // If the horse is being edited, disable the creating org field. Creating org should only be accessable on first creation.
    if (!$is_new) {
        $horse = node_load($form['nid']['#value']);
        dpm($horse);
		$form['field_horse_creating_org']['#access'] = false;

        $aging_details = json_decode($horse->field_horse_aging_details[LANGUAGE_NONE][0]['value']);
        $aging_details_vars = array(
            'has_aging_details' => true,
            'aging_details' => $aging_details,
        );
        if ($horse->field_horse_activation_status[LANGUAGE_NONE][0]['value'] == 'Active') {
            $is_active = true;
        }
        $is_foal = equus_horses_extras_check_is_foal($aging_details);
        $current_time_period = equus_horses_extras_get_time_period($aging_details);

	} else {
        $aging_details_vars = array(
            'has_aging_details' => false,
        );
        $current_time_period = NULL;
    }

    $form['aging_details'] = array(
        '#weight' => 0,
        '#type' => 'markup',
        '#markup' => theme("equus_horses_extras_aging_history", $aging_details_vars),
    );

	$breed_IDs = array_slice(array_keys($form['field_horse_breed']['und']['#options']),1);

	$breeds = node_load_multiple($breed_IDs);

	foreach ($breeds as $breed) {
		$form['field_horse_breed']['und']['#options'][$breed->nid] = $breed->field_base_breed['und'][0]['value'] . " - " . $breed->title;
	}

	asort($form['field_horse_breed']['und']['#options']);

    // Add form element for foal aging speed, age transition year, adult aging speed
    $speed_options = array(
        1 => '1x (real time)',
        3 => '3x (standard ES time)',
        6 => '6x (double standard ES time)',
        12 => '12x (standard for foals - not recommended for adults)'
    );

    $foal_speed_default = $current_time_period ? $current_time_period->speed : 12;
    $form['foal_speed'] = array(
        '#type' => 'select',
        '#title' => 'Foal Aging Speed',
        '#options' => $speed_options,
        '#description' => 'insert help text here',
        // TODO: Write help text for aging systems
        '#default_value' => $foal_speed_default,
        '#required' => true,
        '#weight' => 22,
        '#chosen' => FALSE,
    );
    if ($is_foal || !$is_active) {
        $form['foal_speed']['#states'] = array(
            'enabled' => array(
                'input[name="aging_system_unlock"]' => array(
                    'checked' => true,
                )
            )
        );
	} else {
		$form['foal_speed']['#disabled'] = true;
	}
    $form['adult_speed'] = array(
        '#type' => 'select',
        '#title' => 'Adult Aging Speed',
        '#options' => $speed_options,
        '#description' => 'insert help text here',
        // TODO: Write help text for aging systems
        '#default_value' => 3,
        '#required' => true,
        '#weight' => 23,
        '#chosen' => FALSE,
        '#states' => array(
            'enabled' => array(
                'input[name="aging_system_unlock"]' => array(
                    'checked' => true,
                )
            )
        )
    );
    //TODO: Validation!!!
    $form['transition_year'] = array(
        '#type' => 'textfield',
        '#title' => 'Transition Year',
        '#description' => 'The age the horse transitions from foal to adult.',
        '#default_value' => '4',
        '#required' => true,
        '#size' => 3,
        '#weight' => 24,
    );
    if ($is_foal || !$is_active) {
        $form['transition_year']['#states'] = array(
            'enabled' => array(
                'input[name="aging_system_unlock"]' => array(
                    'checked' => true,
                )
            )
        );
    } else {
		$form['transition_year']['#disabled'] = true;
	}
    
    if (!$is_active) {
    	$form['temp_age'] = array(
	        '#type' => 'textfield',
	        '#title' => 'Age',
	        '#description' => 'Enter an age to automatically update the Date of Birth field, or change the date of birth to have the age automatically calculated.',
	        '#required' => false,
	        '#size' => 3,
	        '#weight' => 21,
	        '#states' => array(
	            'enabled' => array(
	                'input[name="aging_system_unlock"]' => array(
	                    'checked' => true,
	                )
	            )
	        )
    	);
    } else {
    	$form['field_horse_age']['#access'] = true;
    	$form['field_horse_age']['#disabled'] = true;
	}

	$form['field_horse_date_of_birth'][LANGUAGE_NONE][0]['#element_validate'] = array('equus_horses_extras_dob_validation');
	if (!$is_active) {
	    $form['field_horse_date_of_birth']['#states'] = array(
	        'enabled' => array(
	            'input[name="aging_system_unlock"]' => array(
	                'checked' => true,
	            )
	        )
	    );
    } else {
		$form['field_horse_date_of_birth']['#disabled'] = true;
	}

	if (!$is_new) {
		$form['aging_system_unlock'] = array(
	        '#type' => 'checkbox',
	        '#title' => 'Unlock aging system?',
	        '#description' => 'Checking this box will unlock the fields related to the aging system for this horse. Changes will be saved when the horse is saved.',
	        '#required' => false,
	        '#attributes' => array(
	            'onclick' => "equusHorsesExtrasToggleAgingSystem();",
	        )
	    );
	    $form['#group_children']['aging_system_unlock'] = 'group_horse_aging';
	}

    // add programmatically created aging related fields to the general group on the horse node
    $form['#group_children']['foal_speed'] = 'group_horse_aging';
    $form['#group_children']['adult_speed'] = 'group_horse_aging';
    $form['#group_children']['transition_year'] = 'group_horse_aging';
    $form['#group_children']['temp_age'] = 'group_horse_aging';
    $form['#group_children']['aging_details'] = 'group_horse_aging';

    // hide aging details field from users
    $form['field_horse_aging_details']['#access'] = 0;

    // hide horse stats field from users
    $form['field_horse_stats']['#access'] = 0;

//    $form['#attached']['js'] = array(
//        drupal_get_path('module', 'equus_horses_extras') . '/equus_horses_extras.js',
//    );
}

